# ===========================================
# Sakai Monitoring Bot - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# -------------------------------------------
# Sakai LMS Configuration
# -------------------------------------------
SAKAI_BASE_URL=https://sakai.ug.edu.gh
SAKAI_USERNAME=your_student_id
SAKAI_PASSWORD=your_password

# -------------------------------------------
# Supabase Configuration (PostgreSQL)
# -------------------------------------------
# Get these from: https://app.supabase.com → Project Settings → API
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# -------------------------------------------
# WhatsApp Cloud API Configuration
# -------------------------------------------
# Get these from: https://developers.facebook.com → WhatsApp → API Setup
WHATSAPP_TOKEN=your_whatsapp_api_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_RECIPIENT_PHONE=your_phone_number_with_country_code

# -------------------------------------------
# Optional Configuration
# -------------------------------------------
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Timezone for date parsing (Africa/Accra for Ghana)
TIMEZONE=Africa/Accra
