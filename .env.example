# ===========================================
# Sakai Monitoring Bot - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# -------------------------------------------
# Sakai LMS Configuration
# -------------------------------------------
SAKAI_BASE_URL=https://sakai.ug.edu.gh
SAKAI_USERNAME=your_student_id
SAKAI_PASSWORD=your_password

# -------------------------------------------
# Supabase Configuration (PostgreSQL)
# -------------------------------------------
# Get these from: https://app.supabase.com → Project Settings → API
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# -------------------------------------------
# Telegram Bot API Configuration
# -------------------------------------------
# 1. Create a bot: Message @BotFather on Telegram, send /newbot
# 2. Copy the token it gives you below
# 3. Get your chat ID: Message @userinfobot or @getidsbot on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# -------------------------------------------
# Optional Configuration
# -------------------------------------------
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Timezone for date parsing (Africa/Accra for Ghana)
TIMEZONE=Africa/Accra

# Filter to current semester (e.g., S1-2526)
CURRENT_SEMESTER=S1-2526

# Only include courses at or above this level (e.g., 300 for 300-level)
COURSE_LEVEL_FILTER=300
